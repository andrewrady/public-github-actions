{
  "compilerOptions": {
    "target": "ES2022",
    "types": ["node", "jest"],
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
